datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")  // .env 파일의 DATABASE_URL 참조
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  title     String   @unique  // title을 고유 필드로 설정
  excerpt   String
  content   String
  image     String?
  createdAt DateTime @default(now())
}

